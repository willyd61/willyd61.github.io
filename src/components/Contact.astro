---
const contactInfo = [
  {
    label: 'Email',
    value: 'spamwilly@gmail.com',
    link: 'mailto:spamwilly@gmail.com',
    icon: 'email'
  },
  {
    label: 'LinkedIn',
    value: 'linkedin.com/in/williamlipford',
    link: 'https://linkedin.com/in/williamlipford',
    icon: 'linkedin'
  },
  {
    label: 'GitHub',
    value: 'github.com/willyd61',
    link: 'https://github.com/willyd61',
    icon: 'github'
  },
  {
    label: 'Location',
    value: 'Carolina Beach, NC',
    link: null,
    icon: 'location'
  }
];
---

<section id="contact" class="py-20 bg-background-secondary">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="section-heading text-center">Get In Touch</h2>
      <p class="section-subheading text-center max-w-2xl mx-auto">
        Interested in discussing SRE challenges, DevOps transformation, or potential collaboration? Let's connect.
      </p>
      
      <div class="grid md:grid-cols-2 gap-6 mb-12">
        {contactInfo.map(info => (
          <div class="card">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                {info.icon === 'email' && (
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                )}
                {info.icon === 'linkedin' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                )}
                {info.icon === 'github' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {info.icon === 'location' && (
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <p class="text-sm text-text-muted mb-1">{info.label}</p>
                {info.link ? (
                  <a 
                    href={info.link}
                    class="text-text-primary hover:text-primary transition-colors font-medium"
                    target={info.icon !== 'email' ? '_blank' : undefined}
                    rel={info.icon !== 'email' ? 'noopener noreferrer' : undefined}
                  >
                    {info.value}
                  </a>
                ) : (
                  <p class="text-text-primary font-medium">{info.value}</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Download Resume CTA -->
      <div class="text-center">
        <a 
          href="/resume.pdf" 
          class="inline-flex items-center gap-3 btn-primary text-lg"
          download
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Download Full Resume
        </a>
      </div>
    </div>
  </div>
</section>

